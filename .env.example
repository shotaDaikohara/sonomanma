# データベース設定
POSTGRES_PASSWORD=stayconnect123
DATABASE_URL=postgresql://stayconnect:stayconnect123@postgres:5432/stayconnect

# Redis設定
REDIS_URL=redis://redis:6379

# JWT設定
SECRET_KEY=your_very_secure_secret_key_here_at_least_32_characters_long_for_production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# NextAuth設定
NEXTAUTH_SECRET=your_nextauth_secret_here_change_this_in_production
NEXTAUTH_URL=http://localhost:3000

# API設定
NEXT_PUBLIC_API_URL=http://localhost/api

# 環境設定
ENVIRONMENT=development

# ファイルアップロード設定
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# メール設定（オプション）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 外部API設定（オプション）
GOOGLE_MAPS_API_KEY=your_google_maps_api_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=app.log

# セキュリティ設定
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com